/**index.wxss**/

.index_top {
    background-image: url(https://m.360buyimg.com/mobilecms/s1125x939_jfs/t1/96387/17/5589/89213/5def4f9fEe0cf3001/c09e6a3afb4af2b7.jpg);             
    background-repeat: no-repeat;             
    background-position: center center;             
    background-size: cover;
    padding-bottom: 15rpx; 
}

/* 轮播图部分开始 */
.index_swiper swiper{
    width: 100%;
    height: 300rpx;
    margin-top: 20rpx;
}

.index_swiper swiper-item {  
    border-radius: 30rpx;
}

.index_swiper swiper image {
    width: 100%;
}
/* 轮播图部分结束 */



/* 分类导航栏开始 */
.index_category .cate_items {
    display: flex;
    padding-top: 20rpx;
}
.index_category .cate_items navigator{
    flex: 1; 
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; 
}
.index_category .cate_items .cate_items_pic {
    /* margin: 5rpx auto;   */
    flex: 2;
    display: flex;
    width: 100rpx;
    height: 100rpx;
    justify-content: center;
    align-items: center;
}
.index_category .cate_items .cate_items_pic image {
    width: 80%;
    justify-content: center;
    align-items: center;
}
.index_category .cate_items .items_text {
    flex: 1;
    justify-content: center;
    align-items: center;
}
/* 分类导航栏结束 */


/* 推荐开始 */
.index_commend {
    background-color: #f0f2f5;
}

.index_commend .commend_title {
    padding: 10rpx 0 0 0;
    height: 40rpx;
}

.index_commend .commend_title image{
    width: 100%;
    border: 1rpx solid #f0f2f5;
}

.commend_list {
    background-color: #fff;
}
/* 推荐结束 */

/* 商品列表数据呈现 */
.goodsList_content {
    margin-top: 20rpx;
    background-color: #fff;
}

.goodsList_content .goods_item {
    display: flex;
    border-bottom: 1px solid #ccc;
  }

  .goods_item .goods_img_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .goods_item .goods_img_wrap image {
    width: 70%;
  }

  .goods_item .goods_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }

  .goods_item .goods_info_wrap .goods_name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
  }

  .goods_item .goods_info_wrap .goods_price {
    color: #d81e06;
    font-size: 32rpx;
  }