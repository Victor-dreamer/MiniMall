/* pages/category/category.wxss */

.category_search {
    border-top: 2rpx solid #e5e5e5;
    border-bottom: 2rpx solid #e5e5e5;
}

.cate_container {
    height: calc( 100vh - 114rpx );
    display: flex;
}

/* 左侧菜单栏 */
.cate_container .left_menu {
    flex: 2;
}
.left_menu .menu_item {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 30rpx;
}
.left_menu .active {
   color: #d81e06;
   background-color:#f7f7f7;
  }

/* 右侧内容栏 */
.cate_container .right_content {
    flex: 5;
}
.right_content .goods_group .goods_title {
    height: 80rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .right_content .goods_group .goods_title .delimiter {
    color: #ccc;
    padding: 0 10rpx;
  }

  .right_content .goods_group .goods_list {
    display: flex;
    flex-wrap: wrap;
  }

  .right_content .goods_group .goods_list navigator {
    width: 33.33%;
    text-align: center;
  }

  .right_content .goods_group .goods_list navigator image {
    width: 50%;
  }

