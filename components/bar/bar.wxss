@import "../../styles/iconfonts.wxss";

.header {
	display: flex;
	align-items: center;
	top: 0;
	position: fixed;
	width: 100%;
	z-index: 100;
	left:0;
}
	
.header .header-title {
	position: absolute;
    left: 10%;
	font-size: 28rpx;
    border-radius: 15rpx;
	width: 400rpx;
	background-color: #f7f7f7;
}

.header-back{
	position: absolute;
	left: 20rpx;
	font-size:36rpx;
	color: black;
}

.header .header-title input {
	display: inline-block;
	padding: 0 0 0 15rpx;
	vertical-align: middle;
}
  